{
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/node",
      "config": {
        "buildCommand": "cd client && npm run build",
        "outputDirectory": "client/dist",
        "includeFiles": "client/dist/**"
      }
    }
  ],
  "routes": [
    { "handle": "filesystem" },
    { "src": "/.*", "dest": "client/dist/index.html" }
  ]
}